root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.js]
max_line_length = 120
indent_brace_style = K&R
curly_bracket_next_line = true
spaces_around_operators = true

[*.html]
insert_final_newline = false
trim_trailing_whitespace = false
indent_size = 2

[*.yml]
insert_final_newline = false
indent_size = 2
